        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrezimeVlasnikaTvrtke)
        </dd>
        <dt class = "col-sm-2">
            Ime tvrtke
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImeTvrtke)
        </dd>
        <dt class = "col-sm-2">
            Godine poslovanja
        </dt>
        <dd class = "col-sm-10">
