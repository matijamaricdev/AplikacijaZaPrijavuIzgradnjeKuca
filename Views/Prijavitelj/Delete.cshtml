    <dl class="row">
        <dt class = "col-sm-2">
            Ime vlasnika tvrtke
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImeVlasnikaTvrtke)
        </dd>
        <dt class = "col-sm-2">
